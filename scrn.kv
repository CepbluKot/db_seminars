WindowManager:

    LoginScreen:
        Screen:
            name: 'LoginScreen'
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'back6.jpg'

            MDCard:
                size_hint: None, None
                size: 300, 400
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                padding: 25
                spacing: 25
                orientation: "vertical"
                elevation: 1
                radius: [5]

                MDLabel:
                    id: login_label
                    text: "Log In to your database"
                    font_size: 18
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"y": 0.1}

                Widget:
                    size_hint_y: None
                    height: 1

                MDTextField:
                    id: login_field
                    hint_text: "Login"
                    size_hint_x: None
                    font_size: 18
                    width: 250 

                MDTextField:
                    id: password_field
                    hint_text: "Password"
                    size_hint_x: None
                    width: 250
                    font_size: 18

                MDFillRoundFlatButton:
                    text: "LOG IN"
                    bold: True
                    text_color: 0, 0, 0, 1
                    font_size: 16
                    size_hint: 1, None
                    md_bg_color: 59/255, 163/255, 248/255, 1
                    pos_hint: {"center_x": 0.5}
                    on_press: app.login()

                Widget:
                    size_hint_y: None
                    height: 40
    
    NavScreen: 
        name: 'NavScreen'
        #:import get_color_from_hex kivy.utils.get_color_from_hex
        MDScreen:
            
            MDBottomNavigation:
                panel_color: get_color_from_hex("#eeeaea")
                selected_color_background: get_color_from_hex("#97ecf8")
                text_color_active: 0, 0, 0, 1

                MDBottomNavigationItem:
                    name: 'Main Table'
                    text: 'Main Table'
                    icon: 'database'
                    badge_icon: "numeric-10"

                    MDLabel:
                        text: 'Main Table'
                        halign: 'center'

                MDBottomNavigationItem:
                    name: 'Phone Number'
                    text: 'Phone Number'
                    icon: 'cellphone'
                    badge_icon: "numeric-5"

                    MDLabel:
                        text: 'Phone Number Table'
                        halign: 'center'

                MDBottomNavigationItem:
                    name: 'Address'
                    text: 'Address'
                    icon: 'office-building-outline'

                    MDLabel:
                        text: 'Address Table'
                        halign: 'center'
