WindowManager:

    LoginScreen:
        Screen:
            name: 'LoginScreen'
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'back6.jpg'

            MDCard:
                size_hint: None, None
                size: 300, 400
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size_hint_x: 0.3
                size_hint_y: 0.4
                padding: 25
                spacing: 25
                orientation: "vertical"
                elevation: 1
                radius: [5]

                MDLabel:
                    id: login_label
                    text: "Log In to your database"
                    font_size: 50
                    halign: 'center'
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {"y": 0.1}

                Widget:
                    size_hint_y: None
                    height: 1

                MDTextField:
                    id: login_field
                    hint_text: "Login"
                    size_hint_x: None
                    font_size: 18
                    width: 400

                MDTextField:
                    id: password_field
                    hint_text: "Password"
                    size_hint_x: None
                    width: 400
                    font_size: 18

                MDFillRoundFlatButton:
                    text: "LOG IN"
                    bold: True
                    text_color: 0, 0, 0, 1
                    font_size: 16
                    size_hint: 1, None
                    md_bg_color: 59/255, 163/255, 248/255, 1
                    pos_hint: {"center_x": 0.5}
                    on_press: app.login()

                Widget:
                    size_hint_y: None
                    height: 40
    
    NavScreen: 
        name: 'NavScreen'
        #:import get_color_from_hex kivy.utils.get_color_from_hex
        MDScreen:
            id: here
            MDBottomNavigation:
                panel_color: get_color_from_hex("#eeeaea")
                selected_color_background: get_color_from_hex("#97ecf8")
                text_color_active: 0, 0, 0, 1

                MDBottomNavigationItem:
                    id: main_table
                    name: 'Main Table'
                    text: 'Main Table'
                    icon: 'database'
                    badge_icon: "numeric-10"

                    MDLabel:
                        text: 'Main Table'
                        halign: 'center'

                    MDTextField:
                        id: first_name
                        hint_text: "first name"
                        size_hint_x: .1
                        pos_hint: {"center_x": 0.1, "center_y": 0.82}
                        on_text_validate: root.update_data()

                    MDTextField:
                        id: surname
                        hint_text: "surname"
                        size_hint_x: .1
                        on_text_validate: root.update_data()
                        pos_hint: {"center_x": 0.25, "center_y": 0.82}

                    MDTextField:
                        id: last_name
                        hint_text: "last name"
                        size_hint_x: .1
                        on_text_validate: root.update_data()
                        pos_hint: {"center_x": 0.4, "center_y": 0.82}

                    MDTextField:
                        id: phone_number
                        hint_text: "phone number"
                        size_hint_x: .1
                        on_text_validate: root.update_data()
                        pos_hint: {"center_x": 0.55, "center_y": 0.82}

                    MDTextField:
                        id: address
                        hint_text: "address"
                        size_hint_x: .1
                        on_text_validate: root.update_data()
                        pos_hint: {"center_x": 0.7, "center_y": 0.82}


                MDBottomNavigationItem:
                    id: phone
                    name: 'Phone Number'
                    text: 'Phone Number'
                    icon: 'cellphone'
                    badge_icon: "numeric-5"

                    MDLabel:
                        text: 'Phone Number Table'
                        halign: 'center'

                MDBottomNavigationItem:
                    id: syda
                    name: 'Address'
                    text: 'Address'
                    icon: 'office-building-outline'

                    MDLabel:
                        text: 'Address Tableee'
                        halign: 'center'
                    
